  <!-- Stats teaser -->
  <div class="flex gap-6 mt-6 animate-fade-up delay-300 relative z-10">
    <div class="text-center">
      <p class="text-white font-bold text-lg">10K+</p>
      <p class="text-brand-200 text-xs">Users</p>
    </div>
    <div class="text-center">
      <p class="text-white font-bold text-lg">$50K+</p>
      <p class="text-brand-200 text-xs">Paid Out</p>
    </div>
