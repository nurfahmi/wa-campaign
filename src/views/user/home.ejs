<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home | WA Campaign</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            brand: { 50:'#f0fdf4', 100:'#dcfce7', 200:'#bbf7d0', 300:'#86efac', 400:'#4ade80', 500:'#22c55e', 600:'#16a34a', 700:'#15803d', 800:'#166534', 900:'#14532d' }
          }
        }
      }
    }
  </script>
  <style>
    @keyframes slideUp{from{transform:translateY(30px);opacity:0}to{transform:translateY(0);opacity:1}}
    @keyframes pulse-dot{0%,100%{opacity:1}50%{opacity:.4}}
    @keyframes bounce-money{0%,100%{transform:translateY(0) rotate(0)}25%{transform:translateY(-6px) rotate(-5deg)}75%{transform:translateY(-3px) rotate(5deg)}}
    @keyframes shimmer{0%{background-position:-200% center}100%{background-position:200% center}}
    .animate-slide-up{animation:slideUp .5s ease-out both}
    .animate-pulse-dot{animation:pulse-dot 1.5s ease-in-out infinite}
    .animate-bounce-money{animation:bounce-money 2s ease-in-out infinite}
    .delay-100{animation-delay:.1s}.delay-200{animation-delay:.2s}.delay-300{animation-delay:.3s}.delay-400{animation-delay:.4s}
    .shimmer-btn{background-size:200% auto;animation:shimmer 3s linear infinite}
  </style>
</head>
<body class="bg-gray-100">
<div class="max-w-sm mx-auto min-h-screen bg-gray-50 shadow-xl relative">

<!-- Top Bar -->
<div class="bg-gradient-to-br from-brand-700 via-brand-600 to-emerald-500 px-5 pt-10 pb-8 rounded-b-3xl relative overflow-hidden">
  <!-- Decorative -->
  <div class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/4"></div>
  <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/4"></div>

  <div class="flex items-center justify-between mb-1 relative z-10">
    <div>
      <p class="text-brand-200 text-xs">Selamat datang ğŸ‘‹</p>
      <h1 class="text-white text-lg font-bold"><%= user.name %></h1>
    </div>
    <a href="/profile" class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center backdrop-blur">
      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
    </a>
  </div>

  <!-- Credit Balance Card -->
  <div class="bg-white/10 backdrop-blur-md rounded-2xl p-4 border border-white/20 mt-4 relative z-10">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-brand-200 text-xs uppercase tracking-wider">Saldo Kamu ğŸ’°</p>
        <div class="flex items-baseline gap-1 mt-1">
          <span class="text-3xl font-black text-white"><%= formatMoney(user.credit_balance) %></span>
        </div>
      </div>
      <div class="text-4xl animate-bounce-money">ğŸ’¸</div>
    </div>
    <div class="flex items-center gap-2 mt-3 pt-3 border-t border-white/10">
      <span class="text-brand-200 text-xs">ğŸ“… Hari ini: <strong class="text-white"><%= profile.dailyJobs %>/<%= user.daily_limit %></strong></span>
      <span class="text-brand-300">â€¢</span>
      <span class="text-brand-200 text-xs">â° Jam ini: <strong class="text-white"><%= profile.hourlyJobs %>/<%= user.hourly_limit %></strong></span>
    </div>
  </div>
</div>

<div class="px-5 -mt-4 space-y-4 pb-8">

  <!-- ========== STATE 1: WhatsApp Not Connected ========== -->
  <% if (!user.wa_connected) { %>
  <div id="waConnectCard" class="bg-white rounded-2xl shadow-sm p-5 border border-gray-100 animate-slide-up">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-10 h-10 bg-green-100 rounded-xl flex items-center justify-center text-xl">ğŸ“±</div>
      <div>
        <h3 class="text-sm font-bold text-gray-800">Hubungkan WhatsApp</h3>
        <p class="text-xs text-gray-500">Wajib untuk mulai earning!</p>
      </div>
    </div>

    <!-- Phone Input -->
    <div id="phoneStep">
      <div class="bg-amber-50 border border-amber-200 rounded-xl p-3 mb-3">
        <p class="text-xs text-amber-700">âš¡ Hubungkan WA kamu dulu, baru bisa mulai klik dan dapetin duit!</p>
      </div>
      <label class="text-xs text-gray-500 mb-1 block">Nomor WhatsApp kamu</label>
      <div class="flex gap-2">
        <input type="tel" id="phoneInput" placeholder="628123456789"
          class="flex-1 text-sm bg-gray-50 rounded-xl px-3 py-2.5 border border-gray-200 focus:border-brand-500 focus:ring-2 focus:ring-brand-500/20 outline-none transition">
        <button onclick="connectWA()" id="connectBtn"
          class="px-4 py-2.5 bg-green-500 text-white rounded-xl text-sm font-bold hover:bg-green-600 transition-all hover:shadow-lg hover:shadow-green-500/25 active:scale-95 flex items-center gap-1">
          <span id="connectBtnText">Connect</span>
        </button>
      </div>
      <p class="text-xs text-gray-400 mt-1.5">Pakai kode negara, tanpa tanda +</p>
    </div>

    <!-- Pairing Code Display -->
    <div id="pairingStep" class="hidden text-center">
      <p class="text-xs text-gray-600 mb-2">Masukkan kode ini di WhatsApp kamu:</p>
      <div class="bg-gradient-to-br from-brand-50 to-emerald-50 rounded-xl p-5 mb-3 border-2 border-dashed border-brand-300">
        <p id="pairingCode" class="text-3xl font-mono font-black text-brand-700 tracking-[0.3em]">--------</p>
      </div>
      <div class="bg-gray-50 rounded-xl p-3 text-left mb-3">
        <p class="text-xs text-gray-600 font-medium mb-1">ğŸ“‹ Cara pakai:</p>
        <ol class="text-xs text-gray-500 space-y-1 ml-4 list-decimal">
          <li>Buka WhatsApp di HP</li>
          <li>Settings â†’ Linked Devices</li>
          <li>Link a Device â†’ Link with phone number</li>
          <li>Masukkan kode di atas</li>
        </ol>
      </div>
      <div class="flex items-center justify-center gap-2 text-xs text-orange-500">
        <div class="w-2 h-2 bg-orange-400 rounded-full animate-pulse-dot"></div>
        <span id="statusText">Menunggu koneksi...</span>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-2xl shadow-sm p-5 border border-gray-100 text-center animate-slide-up delay-100">
    <div class="text-3xl mb-2">ğŸ”’</div>
    <p class="text-gray-500 text-sm font-medium">Hubungkan WhatsApp untuk mulai cari duit!</p>
    <p class="text-gray-400 text-xs mt-1">Klik klik dapet duit dong ğŸ”¥</p>
  </div>

  <% } else { %>
  <!-- ========== STATE 2 & 3: WA Connected ========== -->

  <!-- WA Status Bar -->
  <div class="bg-white rounded-2xl shadow-sm p-3 border border-gray-100 flex items-center justify-between animate-slide-up">
    <div class="flex items-center gap-2">
      <div class="w-2.5 h-2.5 bg-green-400 rounded-full animate-pulse-dot"></div>
      <span class="text-xs font-medium text-gray-600">WhatsApp terhubung âœ…</span>
      <% if (user.phone_number) { %>
      <span class="text-xs text-gray-400">(<%= user.phone_number %>)</span>
      <% } %>
    </div>
    <button onclick="disconnectWA()" class="text-xs text-red-400 hover:text-red-600 transition">Putuskan</button>
  </div>

  <!-- Motivational Banner -->
  <div class="bg-gradient-to-r from-amber-400 to-orange-500 rounded-2xl p-4 shadow-lg shadow-orange-500/20 animate-slide-up delay-100">
    <div class="flex items-center gap-3">
      <span class="text-3xl">ğŸ”¥</span>
      <div>
        <p class="text-white font-bold text-sm">Siap cari duit?</p>
        <p class="text-orange-100 text-xs">Klik tombol di bawah dan langsung earning!</p>
      </div>
    </div>
  </div>

  <!-- Campaign Info Card -->
  <% if (activeCampaign) { %>
  <div class="bg-white rounded-2xl shadow-sm p-4 border border-gray-100 animate-slide-up delay-200">
    <div class="flex items-center gap-3 mb-3">
      <div class="w-10 h-10 bg-brand-100 rounded-xl flex items-center justify-center text-lg">ğŸ“¢</div>
      <div class="flex-1">
        <h3 class="text-sm font-bold text-gray-800"><%= activeCampaign.name %></h3>
        <p class="text-xs text-gray-500">Reward: <span class="text-brand-600 font-bold"><%= formatMoney(activeCampaign.reward_per_job) %></span> per job</p>
      </div>
    </div>
    <div>
      <div class="flex justify-between text-xs text-gray-500 mb-1">
        <span>Progress</span>
        <span class="font-medium"><%= activeCampaign.target_delivered %>/<%= activeCampaign.target_total %></span>
      </div>
      <div class="w-full bg-gray-100 rounded-full h-2.5">
        <div class="bg-gradient-to-r from-brand-400 to-brand-600 h-2.5 rounded-full transition-all duration-500" style="width: <%= activeCampaign.target_total > 0 ? Math.round(activeCampaign.target_delivered / activeCampaign.target_total * 100) : 0 %>%"></div>
      </div>
    </div>
  </div>
  <% } else { %>
  <div class="bg-white rounded-2xl shadow-sm p-6 border border-gray-100 text-center animate-slide-up delay-200">
    <div class="text-3xl mb-2">ğŸ˜´</div>
    <p class="text-gray-500 text-sm">Belum ada campaign aktif</p>
    <p class="text-gray-400 text-xs mt-1">Tunggu campaign baru ya!</p>
  </div>
  <% } %>

  <!-- Take Job Button -->
  <div class="text-center animate-slide-up delay-300">
    <button id="takeJobBtn" onclick="takeJob()" <% if (!activeCampaign || cooldownRemaining > 0) { %>disabled<% } %>
      class="w-full py-4 bg-gradient-to-r from-brand-500 via-brand-600 to-emerald-600 text-white font-black text-lg rounded-2xl shadow-lg shadow-brand-500/30 hover:shadow-brand-500/50 hover:scale-[1.02] transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100 active:scale-95">
      <span id="btnText">âš¡ Ambil Job Sekarang!</span>
    </button>
    <div id="cooldownTimer" class="mt-3 <% if (cooldownRemaining <= 0) { %>hidden<% } %>">
      <div class="bg-orange-50 border border-orange-200 rounded-xl p-3 inline-flex items-center gap-2">
        <span class="text-lg">â³</span>
        <div class="text-left">
          <p class="text-xs text-orange-600 font-bold">Cooldown aktif</p>
          <p class="text-sm text-orange-700 font-mono font-bold"><span id="cooldownCount"><%= cooldownRemaining %></span> detik lagi</p>
        </div>
      </div>
    </div>
    <% if (activeCampaign && cooldownRemaining <= 0) { %>
    <p class="text-xs text-gray-400 mt-2">Klik dan langsung dapet <%= formatMoney(activeCampaign.reward_per_job) %> ğŸ’°</p>
    <% } %>
  </div>

  <% } %>

  <!-- How it Works -->
  <div class="bg-white rounded-2xl shadow-sm p-4 border border-gray-100 animate-slide-up delay-400">
    <h3 class="text-sm font-bold text-gray-800 mb-3">ğŸ¯ Cara Kerja</h3>
    <div class="space-y-3">
      <div class="flex items-start gap-3">
        <div class="w-7 h-7 bg-brand-100 rounded-lg flex items-center justify-center text-xs font-bold text-brand-700 flex-shrink-0">1</div>
        <div>
          <p class="text-xs font-medium text-gray-700">Hubungkan WhatsApp</p>
          <p class="text-xs text-gray-400">Pakai kode pairing, gampang banget</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <div class="w-7 h-7 bg-brand-100 rounded-lg flex items-center justify-center text-xs font-bold text-brand-700 flex-shrink-0">2</div>
        <div>
          <p class="text-xs font-medium text-gray-700">Klik "Ambil Job"</p>
          <p class="text-xs text-gray-400">Sistem otomatis kirim pesan via WA kamu</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <div class="w-7 h-7 bg-amber-100 rounded-lg flex items-center justify-center text-xs font-bold text-amber-700 flex-shrink-0">3</div>
        <div>
          <p class="text-xs font-medium text-gray-700">Dapetin Duit! ğŸ’°</p>
          <p class="text-xs text-gray-400">Reward langsung masuk saldo kamu</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Referral Box -->
  <div class="bg-gradient-to-br from-purple-50 to-indigo-50 rounded-2xl shadow-sm p-4 border border-purple-100">
    <div class="flex items-center gap-2 mb-2">
      <span class="text-lg">ğŸ¤</span>
      <h3 class="text-sm font-bold text-gray-800">Ajak Teman, Bonus Terus!</h3>
    </div>
    <p class="text-xs text-gray-500 mb-3">Share link kamu. Setiap teman yang gabung & earning, kamu dapet bonus otomatis! ğŸ‰</p>
    <div class="flex gap-2">
      <input type="text" readonly value="<%= baseUrl %>/login?ref=<%= user.referral_code %>"
        class="flex-1 text-xs bg-white rounded-lg px-3 py-2 text-gray-600 border border-purple-200" id="refLink">
      <button onclick="copyRef()" class="px-3 py-2 bg-purple-500 text-white rounded-lg text-xs font-bold hover:bg-purple-600 transition active:scale-95">Copy</button>
    </div>
    <a href="/referrals" class="block text-center mt-3 text-xs text-purple-600 font-medium hover:text-purple-700 transition">Lihat daftar referral â†’</a>
  </div>

  <!-- Logout -->
  <div class="text-center pt-2">
    <a href="/logout" class="text-sm text-gray-400 hover:text-red-500 transition">Sign Out</a>
  </div>
</div>

<!-- Success Toast -->
<div id="successToast" class="fixed bottom-20 left-1/2 -translate-x-1/2 max-w-xs w-full bg-brand-600 text-white rounded-2xl p-4 shadow-2xl transform translate-y-full opacity-0 transition-all duration-500 z-50">
  <div class="flex items-center gap-3">
    <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center text-xl">ğŸ‰</div>
    <div>
      <p class="font-bold text-sm" id="toastTitle">Job Taken!</p>
      <p class="text-brand-200 text-xs" id="toastMsg"></p>
    </div>
  </div>
</div>

<script>
// ===== WhatsApp Connection =====
let pollInterval;

async function connectWA() {
  const phone = document.getElementById('phoneInput').value.trim();
  if (!phone) return showToast('âš ï¸ Error', 'Masukkan nomor WA kamu!', true);

  const btn = document.getElementById('connectBtn');
  const btnText = document.getElementById('connectBtnText');
  btn.disabled = true;
  btnText.textContent = '...';

  try {
    const res = await fetch('/api/connect-wa', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ phoneNumber: phone }),
    });
    const data = await res.json();

    if (data.success) {
      document.getElementById('phoneStep').classList.add('hidden');
      document.getElementById('pairingStep').classList.remove('hidden');
      document.getElementById('pairingCode').textContent = data.pairingCode;
      startPolling();
    } else {
      showToast('âš ï¸ Error', data.message, true);
      btn.disabled = false;
      btnText.textContent = 'Connect';
    }
  } catch (e) {
    showToast('âš ï¸ Error', 'Gagal koneksi', true);
    btn.disabled = false;
    btnText.textContent = 'Connect';
  }
}

function startPolling() {
  pollInterval = setInterval(async () => {
    try {
      const res = await fetch('/api/wa-status');
      const data = await res.json();
      if (data.connected) {
        clearInterval(pollInterval);
        document.getElementById('statusText').textContent = 'Terhubung! Memuat ulang...';
        setTimeout(() => window.location.reload(), 1000);
      }
    } catch (e) {}
  }, 3000);
}

async function disconnectWA() {
  if (!confirm('Putuskan WhatsApp?')) return;
  try {
    await fetch('/api/disconnect-wa', { method: 'POST' });
    window.location.reload();
  } catch (e) {
    showToast('âš ï¸ Error', 'Gagal memutuskan', true);
  }
}

// ===== Take Job =====
let cooldownSeconds = <%= cooldownRemaining %>;
let cooldownInterval;

if (cooldownSeconds > 0) startCooldown();

function startCooldown() {
  const btn = document.getElementById('takeJobBtn');
  if (btn) {
    btn.disabled = true;
    document.getElementById('cooldownTimer').classList.remove('hidden');
    cooldownInterval = setInterval(() => {
      cooldownSeconds--;
      document.getElementById('cooldownCount').textContent = cooldownSeconds;
      if (cooldownSeconds <= 0) {
        clearInterval(cooldownInterval);
        btn.disabled = false;
        document.getElementById('cooldownTimer').classList.add('hidden');
      }
    }, 1000);
  }
}

async function takeJob() {
  const btn = document.getElementById('takeJobBtn');
  const btnText = document.getElementById('btnText');
  btn.disabled = true;
  btnText.textContent = 'â³ Memproses...';
  try {
    const res = await fetch('/api/take-job', { method: 'POST', headers: { 'Content-Type': 'application/json' } });
    const data = await res.json();
    if (data.success) {
      showToast('ğŸ‰ Job Berhasil!', data.data.campaignName + ' â€¢ Reward: $' + data.data.reward);
      cooldownSeconds = data.data.cooldownSeconds || 30;
      startCooldown();
    } else {
      showToast('âš ï¸ Error', data.message, true);
      btn.disabled = false;
    }
  } catch (e) {
    showToast('âš ï¸ Error', 'Network error', true);
    btn.disabled = false;
  }
  btnText.textContent = 'âš¡ Ambil Job Sekarang!';
}

// ===== Helpers =====
function showToast(title, msg, isError) {
  const toast = document.getElementById('successToast');
  document.getElementById('toastTitle').textContent = title;
  document.getElementById('toastMsg').textContent = msg;
  toast.className = toast.className.replace('translate-y-full opacity-0', 'translate-y-0 opacity-100');
  if (isError) toast.classList.replace('bg-brand-600', 'bg-red-500');
  else toast.classList.replace('bg-red-500', 'bg-brand-600');
  setTimeout(() => {
    toast.className = toast.className.replace('translate-y-0 opacity-100', 'translate-y-full opacity-0');
  }, 3000);
}

function copyRef() {
  navigator.clipboard.writeText(document.getElementById('refLink').value);
  showToast('ğŸ“‹ Copied!', 'Link referral sudah disalin!');
}
</script>

</div>
</body>
</html>
