<%- include('partials/header') %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-100 dark:border-gray-800">
    <h3 class="text-lg font-semibold mb-6"><%= campaign ? 'Edit Campaign' : 'New Campaign' %></h3>
    <form method="POST" action="<%= campaign ? '/admin/campaigns/' + campaign.id : '/admin/campaigns' %>" class="space-y-5">

      <!-- Basic Settings -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Campaign Name</label>
        <input type="text" name="name" value="<%= campaign ? campaign.name : '' %>" required class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none">
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Country</label>
          <input type="text" name="country_target" value="<%= campaign ? campaign.country_target || '' : '' %>" maxlength="5" placeholder="e.g. ID" class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Reward (<%= currency %>)</label>
          <input type="number" step="0.01" name="reward_per_job" value="<%= campaign ? campaign.reward_per_job : '0.10' %>" required class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Cooldown (seconds)</label>
          <input type="number" name="cooldown_seconds" value="<%= campaign ? campaign.cooldown_seconds : 3600 %>" class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Daily Limit/User</label>
          <input type="number" name="daily_limit_per_user" value="<%= campaign ? campaign.daily_limit_per_user : 50 %>" class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
        <select name="status" class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
          <option value="draft" <%= campaign && campaign.status === 'draft' ? 'selected' : '' %>>Draft</option>
          <option value="active" <%= campaign && campaign.status === 'active' ? 'selected' : '' %>>Active</option>
          <option value="paused" <%= campaign && campaign.status === 'paused' ? 'selected' : '' %>>Paused</option>
          <option value="completed" <%= campaign && campaign.status === 'completed' ? 'selected' : '' %>>Completed</option>
        </select>
      </div>

      <hr class="border-gray-200 dark:border-gray-700">

      <!-- Message Templates (multi-select) -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Message Templates <span class="text-gray-400 text-xs">(select 1 or more for A/B rotation)</span></label>
        <% if (templates.length) { %>
        <div class="space-y-2 max-h-48 overflow-y-auto border border-gray-200 dark:border-gray-700 rounded-xl p-3 bg-gray-50 dark:bg-gray-800">
          <% templates.forEach(t => { %>
          <label class="flex items-start gap-3 p-2 rounded-lg hover:bg-white dark:hover:bg-gray-700 transition cursor-pointer">
            <input type="checkbox" name="template_ids" value="<%= t.id %>"
              <% if (campaign && campaign.templates && campaign.templates.some(ct => ct.id === t.id)) { %>checked<% } %>
              class="mt-0.5 rounded border-gray-300 text-brand-500 focus:ring-brand-500">
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= t.name %></p>
              <p class="text-xs text-gray-400 truncate"><%= t.body ? t.body.substring(0, 80) : '' %></p>
            </div>
            <span class="inline-flex px-1.5 py-0.5 text-xs rounded-full flex-shrink-0 <%= t.message_type === 'button' ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700' %>"><%= t.message_type %></span>
          </label>
          <% }); %>
        </div>
        <% } else { %>
        <p class="text-sm text-gray-400">No templates created yet. <a href="/admin/templates/new" class="text-brand-600 hover:underline">Create one →</a></p>
        <% } %>
      </div>

      <!-- Target Lists (multi-select) -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Target Lists <span class="text-gray-400 text-xs">(phone numbers to send to)</span></label>
        <% if (targetLists.length) { %>
        <div class="space-y-2 max-h-48 overflow-y-auto border border-gray-200 dark:border-gray-700 rounded-xl p-3 bg-gray-50 dark:bg-gray-800">
          <% targetLists.forEach(l => { %>
          <label class="flex items-center gap-3 p-2 rounded-lg hover:bg-white dark:hover:bg-gray-700 transition cursor-pointer">
            <input type="checkbox" name="target_list_ids" value="<%= l.id %>"
              <% if (campaign && campaign.targetLists && campaign.targetLists.some(cl => cl.id === l.id)) { %>checked<% } %>
              class="rounded border-gray-300 text-brand-500 focus:ring-brand-500">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= l.name %></p>
            </div>
            <span class="text-xs text-gray-400"><%= l.total_count.toLocaleString() %> numbers</span>
          </label>
          <% }); %>
        </div>
        <% } else { %>
        <p class="text-sm text-gray-400">No target lists uploaded yet. <a href="/admin/targets" class="text-brand-600 hover:underline">Upload one →</a></p>
        <% } %>
      </div>

      <div class="flex gap-3">
        <button type="submit" class="flex-1 py-3 bg-brand-500 text-white rounded-xl font-medium hover:bg-brand-600 transition"><%= campaign ? 'Update' : 'Create' %> Campaign</button>
        <a href="/admin/campaigns" class="px-6 py-3 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded-xl font-medium hover:bg-gray-200 transition text-center">Cancel</a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
