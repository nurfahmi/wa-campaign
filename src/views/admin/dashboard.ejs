<%- include('partials/header') %>

<!-- Stats Grid -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-5 border border-gray-100 dark:border-gray-800">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/40 rounded-xl flex items-center justify-center">
        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6"/></svg>
      </div>
      <div>
        <p class="text-2xl font-bold"><%= campaignStats.total_campaigns || 0 %></p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Total Campaigns</p>
      </div>
    </div>
  </div>
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-5 border border-gray-100 dark:border-gray-800">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-green-100 dark:bg-green-900/40 rounded-xl flex items-center justify-center">
        <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
      </div>
      <div>
        <p class="text-2xl font-bold"><%= campaignStats.total_delivered || 0 %></p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Delivered</p>
      </div>
    </div>
  </div>
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-5 border border-gray-100 dark:border-gray-800">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900/40 rounded-xl flex items-center justify-center">
        <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
      </div>
      <div>
        <p class="text-2xl font-bold"><%= userCount %></p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Total Users</p>
      </div>
    </div>
  </div>
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-5 border border-gray-100 dark:border-gray-800">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-amber-100 dark:bg-amber-900/40 rounded-xl flex items-center justify-center">
        <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1"/></svg>
      </div>
      <div>
        <p class="text-2xl font-bold"><%= formatMoney(jobStats.total_rewards) %></p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Total Rewards</p>
      </div>
    </div>
  </div>
</div>

<!-- Summary Cards -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-100 dark:border-gray-800">
    <h3 class="font-semibold mb-4">Campaign Summary</h3>
    <div class="space-y-3">
      <div class="flex justify-between text-sm"><span class="text-gray-500 dark:text-gray-400">Active</span><span class="font-medium text-brand-600"><%= campaignStats.active_campaigns || 0 %></span></div>
      <div class="flex justify-between text-sm"><span class="text-gray-500 dark:text-gray-400">Total Targets</span><span class="font-medium"><%= campaignStats.total_targets || 0 %></span></div>
      <div class="flex justify-between text-sm"><span class="text-gray-500 dark:text-gray-400">Assigned</span><span class="font-medium"><%= campaignStats.total_assigned || 0 %></span></div>
      <div class="flex justify-between text-sm"><span class="text-gray-500 dark:text-gray-400">Delivered</span><span class="font-medium text-green-600"><%= campaignStats.total_delivered || 0 %></span></div>
    </div>
  </div>
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-100 dark:border-gray-800">
    <h3 class="font-semibold mb-4">Job Summary</h3>
    <div class="space-y-3">
      <div class="flex justify-between text-sm"><span class="text-gray-500 dark:text-gray-400">Total Jobs</span><span class="font-medium"><%= jobStats.total_jobs || 0 %></span></div>
      <div class="flex justify-between text-sm"><span class="text-gray-500 dark:text-gray-400">Delivered</span><span class="font-medium text-green-600"><%= jobStats.delivered_jobs || 0 %></span></div>
      <div class="flex justify-between text-sm"><span class="text-gray-500 dark:text-gray-400">Pending</span><span class="font-medium text-amber-500"><%= jobStats.pending_jobs || 0 %></span></div>
      <div class="flex justify-between text-sm"><span class="text-gray-500 dark:text-gray-400">Failed</span><span class="font-medium text-red-500"><%= jobStats.failed_jobs || 0 %></span></div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
