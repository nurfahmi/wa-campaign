<%- include('partials/header') %>

<div class="space-y-6">
  <!-- Campaign Header -->
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-100 dark:border-gray-800">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold"><%= campaign.name %></h3>
      <span class="inline-flex px-3 py-1 text-xs rounded-full font-medium
        <%= campaign.status === 'active' ? 'bg-green-100 text-green-700 dark:bg-green-900/40 dark:text-green-400' :
           campaign.status === 'paused' ? 'bg-amber-100 text-amber-700' :
           campaign.status === 'completed' ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-700' %>"><%= campaign.status %></span>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
      <div><span class="text-gray-500 dark:text-gray-400 block">Reward</span><span class="font-medium"><%= formatMoney(campaign.reward_per_job) %></span></div>
      <div><span class="text-gray-500 dark:text-gray-400 block">Cooldown</span><span class="font-medium"><%= campaign.cooldown_seconds %>s</span></div>
      <div><span class="text-gray-500 dark:text-gray-400 block">Daily Limit</span><span class="font-medium"><%= campaign.daily_limit_per_user %></span></div>
      <div><span class="text-gray-500 dark:text-gray-400 block">Country</span><span class="font-medium"><%= campaign.country_target || 'All' %></span></div>
    </div>

    <!-- Progress -->
    <div class="mt-4">
      <div class="flex justify-between text-xs text-gray-500 mb-1">
        <span>Delivery Progress</span>
        <span><%= campaign.target_delivered %>/<%= campaign.target_total %> (<%= campaign.target_total > 0 ? Math.round(campaign.target_delivered / campaign.target_total * 100) : 0 %>%)</span>
      </div>
      <div class="w-full bg-gray-100 dark:bg-gray-800 rounded-full h-2.5">
        <div class="bg-brand-500 h-2.5 rounded-full transition-all" style="width: <%= campaign.target_total > 0 ? Math.round(campaign.target_delivered / campaign.target_total * 100) : 0 %>%"></div>
      </div>
    </div>

    <!-- Target Stats -->
    <div class="grid grid-cols-5 gap-2 mt-4">
      <div class="text-center p-2 bg-gray-50 dark:bg-gray-800 rounded-xl"><p class="text-lg font-bold text-gray-600"><%= campaign.targetStats.pending %></p><p class="text-xs text-gray-400">Pending</p></div>
      <div class="text-center p-2 bg-blue-50 dark:bg-blue-900/20 rounded-xl"><p class="text-lg font-bold text-blue-600"><%= campaign.targetStats.assigned %></p><p class="text-xs text-gray-400">Assigned</p></div>
      <div class="text-center p-2 bg-amber-50 dark:bg-amber-900/20 rounded-xl"><p class="text-lg font-bold text-amber-600"><%= campaign.targetStats.sent %></p><p class="text-xs text-gray-400">Sent</p></div>
      <div class="text-center p-2 bg-green-50 dark:bg-green-900/20 rounded-xl"><p class="text-lg font-bold text-green-600"><%= campaign.targetStats.delivered %></p><p class="text-xs text-gray-400">Delivered</p></div>
      <div class="text-center p-2 bg-red-50 dark:bg-red-900/20 rounded-xl"><p class="text-lg font-bold text-red-600"><%= campaign.targetStats.failed %></p><p class="text-xs text-gray-400">Failed</p></div>
    </div>
  </div>

  <!-- Assigned Message Templates -->
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-100 dark:border-gray-800">
    <h4 class="font-semibold mb-3">ğŸ’¬ Message Templates (<%= campaign.templates.length %>)</h4>
    <% if (campaign.templates.length) { %>
    <div class="space-y-3">
      <% campaign.templates.forEach(t => { %>
      <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-4">
        <div class="flex items-center justify-between mb-2">
          <span class="font-medium text-sm"><%= t.name %></span>
          <span class="inline-flex px-2 py-0.5 text-xs rounded-full <%= t.message_type === 'button' ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700' %>"><%= t.message_type %></span>
        </div>
        <% if (t.header) { %><p class="font-bold text-sm mb-1"><%= t.header %></p><% } %>
        <p class="text-sm whitespace-pre-wrap text-gray-600 dark:text-gray-400"><%= t.body %></p>
        <% if (t.footer) { %><p class="text-xs text-gray-400 mt-2"><%= t.footer %></p><% } %>
      </div>
      <% }); %>
    </div>
    <% } else { %>
    <p class="text-sm text-gray-400">No templates assigned. Edit campaign to add templates.</p>
    <% } %>
  </div>

  <!-- Assigned Target Lists -->
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-100 dark:border-gray-800">
    <h4 class="font-semibold mb-3">ğŸ“‹ Target Lists (<%= campaign.targetLists.length %>)</h4>
    <% if (campaign.targetLists.length) { %>
    <div class="space-y-2">
      <% campaign.targetLists.forEach(l => { %>
      <div class="flex items-center justify-between bg-gray-50 dark:bg-gray-800 rounded-xl px-4 py-3">
        <span class="text-sm font-medium"><%= l.name %></span>
        <span class="text-xs text-gray-400"><%= l.total_count.toLocaleString() %> numbers</span>
      </div>
      <% }); %>
    </div>
    <% } else { %>
    <p class="text-sm text-gray-400">No target lists assigned. Edit campaign to add targets.</p>
    <% } %>
  </div>

  <!-- Edit Campaign (inline form) -->
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 border border-gray-100 dark:border-gray-800">
    <h4 class="font-semibold mb-4">âš™ï¸ Edit Campaign</h4>
    <form method="POST" action="/admin/campaigns/<%= campaign.id %>" class="space-y-4">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Name</label>
          <input type="text" name="name" value="<%= campaign.name %>" required class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
          <select name="status" class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
            <option value="draft" <%= campaign.status === 'draft' ? 'selected' : '' %>>Draft</option>
            <option value="active" <%= campaign.status === 'active' ? 'selected' : '' %>>Active</option>
            <option value="paused" <%= campaign.status === 'paused' ? 'selected' : '' %>>Paused</option>
            <option value="completed" <%= campaign.status === 'completed' ? 'selected' : '' %>>Completed</option>
          </select>
        </div>
      </div>
      <div class="grid grid-cols-3 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Reward (<%= currency %>)</label>
          <input type="number" step="0.01" name="reward_per_job" value="<%= campaign.reward_per_job %>" class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Cooldown (s)</label>
          <input type="number" name="cooldown_seconds" value="<%= campaign.cooldown_seconds %>" class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Daily Limit</label>
          <input type="number" name="daily_limit_per_user" value="<%= campaign.daily_limit_per_user %>" class="w-full px-3 py-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 text-sm focus:ring-2 focus:ring-brand-500 outline-none">
        </div>
      </div>

      <!-- Templates multi-select -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Message Templates</label>
        <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-200 dark:border-gray-700 rounded-xl p-3 bg-gray-50 dark:bg-gray-800">
          <% allTemplates.forEach(t => { %>
          <label class="flex items-center gap-3 p-1.5 rounded-lg hover:bg-white dark:hover:bg-gray-700 transition cursor-pointer">
            <input type="checkbox" name="template_ids" value="<%= t.id %>"
              <% if (campaign.templates.some(ct => ct.id === t.id)) { %>checked<% } %>
              class="rounded border-gray-300 text-brand-500 focus:ring-brand-500">
            <span class="text-sm text-gray-700 dark:text-gray-300"><%= t.name %></span>
            <span class="text-xs text-gray-400 ml-auto"><%= t.message_type %></span>
          </label>
          <% }); %>
          <% if (!allTemplates.length) { %><p class="text-xs text-gray-400">No templates available</p><% } %>
        </div>
      </div>

      <!-- Target Lists multi-select -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Target Lists</label>
        <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-200 dark:border-gray-700 rounded-xl p-3 bg-gray-50 dark:bg-gray-800">
          <% allTargetLists.forEach(l => { %>
          <label class="flex items-center gap-3 p-1.5 rounded-lg hover:bg-white dark:hover:bg-gray-700 transition cursor-pointer">
            <input type="checkbox" name="target_list_ids" value="<%= l.id %>"
              <% if (campaign.targetLists.some(cl => cl.id === l.id)) { %>checked<% } %>
              class="rounded border-gray-300 text-brand-500 focus:ring-brand-500">
            <span class="text-sm text-gray-700 dark:text-gray-300"><%= l.name %></span>
            <span class="text-xs text-gray-400 ml-auto"><%= l.total_count.toLocaleString() %></span>
          </label>
          <% }); %>
          <% if (!allTargetLists.length) { %><p class="text-xs text-gray-400">No target lists available</p><% } %>
        </div>
      </div>

      <button type="submit" class="w-full py-3 bg-brand-500 text-white rounded-xl font-medium hover:bg-brand-600 transition">Save Changes</button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
